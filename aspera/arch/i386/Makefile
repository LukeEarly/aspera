ARCH_CFLAGS=-isystem=$(SYSINCLUDEDIR) --sysroot=$(SYSROOT) -L$(SYSROOT)$(SYSLIBDIR) -m32
ARCH_CPPFLAGS=-m32
ARCH_LDFLAGS=-m32
ARCH_LIBS=
ARCH_TRIPLET=i686-elf
ARCH_LLVM_TARGET=i386-elf
ARCH_KOBJS=\
$(ARCHDIR)/tty.o \

BOOTLOADER?=multiboot
BOOTDIR=$(ARCHDIR)/boot/$(BOOTLOADER)
include $(BOOTDIR)/Makefile

ARCH_CFLAGS:=$(ARCH_CFLAGS) $(BOOT_CFLAGS)
ARCH_CPPFLAGS:=$(ARCH_CPPFLAGS) $(BOOT_CPPFLAGS)
ARCH_LDFLAGS:=$(ARCH_LDFLAGS) $(BOOT_LDFLAGS)
ARCH_LIBS:=$(ARCH_LIBS) $(BOOT_LIBS)
ARCH_KOBJS:=$(ARCH_KOBJS) $(BOOT_KOBJS)
